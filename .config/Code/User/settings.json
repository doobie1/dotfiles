{
    "workbench.colorTheme": "Visual Studio Dark",
    "terminal.integrated.fontFamily": "FiraCode NF, PowerlineSymbols",
    "terminal.integrated.fontSize": 15,
    "editor.fontFamily": "FiraCode NF",
    "editor.renderWhitespace": "all", 
    "yaml.schemas": {
        // match your locally downloaded JSON Schema to the file glob you want to use
        "~/.jsonschema/ansible-playbook": ["^/*.yml"],
        "~/.jsonschema/ansible-role-2.9": ["^/roles/*/tasks/*.yml", "^/tasks/*.yml"]
        // add the settings for collections and inventories as needed...
    }
}
